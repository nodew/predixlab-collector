# Data directories
CALENDAR_DIR=data/calendar
US_CALENDAR_PATH=data/calendar/us.txt
CN_CALENDAR_PATH=data/calendar/cn.txt

INDEX_DIR=data/instruments
US_INDEX_PATH=data/instruments/us.txt
CN_INDEX_PATH=data/instruments/cn.txt

STOCK_DATA_DIR=data/stock_data
US_STOCK_DATA_DIR=data/stock_data/us_data
CN_STOCK_DATA_DIR=data/stock_data/cn_data

NORMALIZED_DATA_DIR=data/normalized_data
US_NORMALIZED_DATA_DIR=data/normalized_data/us_data
CN_NORMALIZED_DATA_DIR=data/normalized_data/cn_data

# MongoDB settings
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=qstock
JOBS_COLLECTION=jobs

# Azure Communication Service (ACS) email settings
# Connection string from Azure Communication Service resource
ACS_CONNECTION_STRING=endpoint=https://your-acs-resource.communication.azure.com/;accesskey=your-access-key

# Sender email address (must be verified in ACS)
ACS_SENDER_EMAIL=DoNotReply@your-domain.com

# Recipient email addresses (comma-separated)
ACS_TO_EMAILS=user1@example.com,user2@example.com
